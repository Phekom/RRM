<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/black_900</item>
        <item name="colorAccent">@color/primaryDarkColor</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    <style name="AppTheme.NoActionBar">-->
<!--        -->
<!--    </style>-->

    <style name="ActionBarTheme"  parent="ThemeOverlay.MaterialComponents.ActionBar">
<!--        <item name="android:textColorPrimary">@android:color/white</item>-->
<!--        <item name="android:textColorSecondary">@color/itis_silver</item>-->
    </style>


    <!-- ITIS -->
    <style name="ItisText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="ItisRegularText" parent="ItisText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="ItisText.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ItisText.Input">
        <item name="android:textSize">@dimen/text_input</item>
    </style>

    <style name="ItisText.ListTitle" parent="ItisText.Input">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ItisText.ListItemItemTitle">
        <item name="fontFamily">@font/roboto_medium
        </item>
    </style>

    <style name="ItisText.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ItisText.OrangeLabel" parent="ItisText.ListTitle">
        <item name="android:textColor">@color/primaryColor</item>
    </style>



    <style name="_hline" parent="_default">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/xsmall</item>
        <item name="android:layout_marginBottom">@dimen/xsmall</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="_vline">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="_hline_orange" parent="_hline">
        <item name="android:background">@color/sanral_burnt_orange</item>/>
    </style>

    <style name="_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="_button" parent="_default">
        <item name="android:background">@drawable/round_corner_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="_linear_layout_horiz" parent="_default">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="_linear_layout" parent="_default">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="_orangeTextLabel" parent="_default">
        <item name="android:textColor">@color/sanral_burnt_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_full_screen" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

</resources>
