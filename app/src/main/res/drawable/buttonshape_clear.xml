<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"
    android:background="@drawable/ripple_circular">

    <corners
        android:radius="6dp"
        />
    <gradient
        android:angle="45"
        android:centerX="65%"
        android:centerColor="#00000000"
        android:startColor="#00000000"
        android:endColor="#00000000"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="270dp"
        android:height="50dp"
        />
    <stroke android:color="@color/itis_red"
        android:width="0.5dp"/>
</shape>