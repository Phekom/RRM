<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:singleLine="true"
                        android:text="@string/project"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/itis_gray" />

                    <TextView
                        android:id="@+id/project_description_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:hint="@string/contract_placeholder"
                        android:maxLines="1"
                        android:layout_marginEnd="25dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/sanral_burnt_orange" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/itis_divider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:text="@string/section"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/itis_gray" />

                    <TextView
                        android:id="@+id/section_description_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:hint="@string/rrm_placeholder_text"
                        android:layout_marginEnd="25dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/sanral_burnt_orange" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/itis_divider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:text="@string/start_km"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/itis_gray" />

                    <TextView
                        android:id="@+id/start_km_description_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:hint="@string/rrm_placeholder_text"
                        android:layout_marginEnd="25dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/sanral_burnt_orange" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/itis_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:text="@string/end_km"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/itis_gray" />

                    <TextView
                        android:id="@+id/end_km_description_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:hint="@string/rrm_placeholder_text"
                        android:layout_marginEnd="25dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/sanral_burnt_orange" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/itis_divider" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/view_estimation_items_listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:veilFrame_baseColor="@color/shimmerBase0"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_highlightColor="@color/shimmerHighlight0"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_layout="@layout/estimates_item"
                    app:veilFrame_radius="2dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true"
                    tools:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/workflow_comment_header_description_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/workflow_comment"
                android:textStyle="bold"
                android:labelFor="@id/workflow_comments_editText" />

            <EditText
                android:id="@+id/workflow_comments_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/itis_burnt_orange"
                android:importantForAutofill="no"
                android:inputType="textAutoCorrect"
                android:maxLength="80"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/itis_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/decline_job_button"
                    style="@style/_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="@dimen/small"
                    android:layout_weight="1"
                    android:text="@string/decline_job" />

                <Button
                    android:id="@+id/approve_job_button"
                    style="@style/_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="@dimen/small"
                    android:layout_weight="1"
                    android:text="@string/approve_job" />


            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>