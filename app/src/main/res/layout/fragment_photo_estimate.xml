<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:id="@+id/photoLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="@dimen/small"
            tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/titleTextView"
                style="@style/_orangeTextLabel"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/small"
                android:layout_weight="1"
                android:hint="M020.01(A): TYPE 1 (LAR...)"
                android:textSize="@dimen/text_medium" />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xsmall">

            <LinearLayout
                    style="@style/_linear_layout_horiz"
                    android:layout_margin="@dimen/xsmall"
                    android:gravity="center_vertical">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xsmall"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_size"
                            android:id="@+id/startPhotoButton"
                            style="@style/_button"
                            android:drawableLeft="@drawable/ic_baseline_photo_camera_24px"
                            android:text="@string/start" />

                    <TextView
                            android:id="@+id/startSectionTextView"
                            style="@style/_default"
                            android:gravity="center"
                            android:hint="Click for Start Photo" />

                    <ImageView
                            android:id="@+id/startImageView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/image_xlarge"
                            android:layout_marginTop="@dimen/small"
                            android:src="@drawable/logo_new_medium" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xsmall"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/endPhotoButton"
                            style="@style/_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_size"
                            android:drawableLeft="@drawable/ic_baseline_photo_camera_24px"
                            android:text="@string/end" />

                    <TextView
                            android:id="@+id/endSectionTextView"
                            style="@style/_default"
                            android:gravity="center"
                            android:hint="Click for End Photo" />

                    <ImageView
                            android:id="@+id/endImageView"
                            android:layout_marginTop="@dimen/small"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/image_xlarge"
                            android:src="@drawable/logo_new_medium" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                style="@style/_default"
                android:layout_marginTop="@dimen/small"
                android:gravity="center"
                android:hint="Calculate Cost" />
        <androidx.cardview.widget.CardView
                android:id="@+id/costCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xsmall">

            <LinearLayout
                    style="@style/_linear_layout_horiz"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/small">

                <TextView
                        android:id="@+id/labelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/small"
                        android:layout_marginBottom="@dimen/small"
                        android:text="Quantity" />

                <EditText
                        android:id="@+id/valueEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:digits="-.0123456789"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:backgroundTint="@color/itis_burnt_orange"
                        android:inputType="numberDecimal"
                        android:text="1"
                        android:visibility="visible" />

                <NumberPicker
                        android:id="@+id/numberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="96dp"
                        android:layout_margin="@dimen/xsmall"
                        android:padding="@dimen/xsmall"
                        android:scaleY="0.7"
                        android:visibility="gone" />

                <TextView
                        android:id="@+id/costTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="  *  500  =  1500"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
                style="@style/_linear_layout_horiz"
                android:gravity="center_vertical|right">

            <Button
                    android:id="@+id/cancelButton"
                    style="@style/_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="@dimen/small"
                    android:layout_weight="1"
                    android:text="CANCEL" />

            <Button
                    android:id="@+id/updateButton"
                    style="@style/_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="@dimen/small"
                    android:layout_weight="1"
                    android:text="UPDATE" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Group
            android:id="@+id/group13_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="data2_loading,textView_loading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
            android:id="@+id/data2_loading"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="100dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />
    <TextView
            android:id="@+id/textView_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/loading_please_wait"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data2_loading"
            app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>