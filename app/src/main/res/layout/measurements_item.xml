<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small">

        <TextView
            android:id="@+id/measure_item_description_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:maxWidth="150dp"
            android:layout_marginStart="10dp"
            android:text="@string/some_super_long_item_name_in_case_it_gets_cut_off"
            android:textColor="@color/sanral_burnt_orange"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/measure_item_quantity_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measure_item_description_textView"
            android:layout_alignParentStart="true"

            android:maxWidth="160dp"
            android:layout_marginStart="10dp"
            android:text="@string/qty_123"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/measure_item_uom_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measure_item_quantity_textView"
            android:layout_alignParentStart="true"

            android:maxWidth="160dp"
            android:layout_marginStart="10dp"
            android:hint="UOM"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/measure_item_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measure_item_uom_textView"
            android:layout_alignParentStart="true"

            android:hint="R 0.00"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/view_captured_item_photo"
            android:layout_width="99dp"
            android:layout_height="97dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/xsmall"
            android:layout_marginEnd="15dp"
            tools:src="@drawable/logo_new_medium" />

        <ImageButton
            android:id="@+id/correctButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/view_captured_item_photo"
            android:layout_toEndOf="@+id/measure_item_description_textView"
            android:background="@drawable/buttonshape"
            app:srcCompat="@drawable/ic_edit" />

    </RelativeLayout>


</LinearLayout>